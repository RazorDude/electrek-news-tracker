{
	"name": "Space Flight Now News Tracker",
	"version": "1.0",
	"description": "Space Flight Now News Tracker",
	"permissions": [
		"notifications",
		"cookies",
		"https://spaceflightnow.com/category/news-archive"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_icon": "rocketIcon16.png",
		"default_popup": "popup.html",
		"icons": {"16": "rocketIcon16.png"}
	},
	"icons": {"48": "rocketIcon48.png"},
	"manifest_version": 2
}